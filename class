    // creating blueprint of customer
    class customer{
        //properties.
        name ='';
        age = '';
        address='';
        userid='';
        mobile='';
        email='';
        //assign value to the properties of objects.
        constructor(_name,_age,_address,_userid, _mobile,_email){ // basically here we are using constructor to create an object and assigning value / details of the customer(object) to the properties/
        //cons(_name,_age,_address,_userid, _mobile,_email) { // but the same thing we can do without using constructor as we are doing here(here we are using a function) and getting the same result/output
            this.name = _name;
            this.age =_age;
            this.address= _address;
            this.userid=_userid;
            this.mobile = _mobile;
            this.email=_email;
        }
        // the thing is why do we need constructor?

        //methods(functions).  Actions to be performed    
        placeOrder(){
            console.log(this);
            this.trackOrder();
            console.log('place order for  ' + this.name);
        }
        trackOrder(){

        }
        search(){

        }
    }

        //create an object.
        //creating an object using customer  blueprint.
        var customer1 = new customer('kumkum',22,'hazaribagh', 'kk',9876543210,'kumkum@gmail.com');
        customer1.placeOrder();
